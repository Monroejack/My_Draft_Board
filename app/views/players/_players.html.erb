<div id="accordion">
<% @player_map.each_with_index do | position_pair, index | %>
<% abv = position_pair.first %>
<% name = position_pair.last %>
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse<%= index%>" aria-expanded="false" aria-controls="collapseOne" style='color: #5aaafa'>
          <%= name %>
        </button>
      </h5>
    </div>
    <div id="collapse<%= index%>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordion">
      <div class="card-body">
          <table>
            <thead>
              <tr>
                <th>Player</th>
                <th>School</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @players.where(position: abv).each do |player| %>
              <tr>
                <td>
                  <b><%= player.first_name %> <%= player.last_name %></b>
                </td>
                <td>
                  <i><%= player.school %></i>
                </td>
                <td>
                  <%= link_to add_player_to_board_path(player_id: player.id, id: @board.id), method: :patch do %>
                  <%= fa_icon "arrow-circle-right", style: 'color: #5aaafa' %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  
